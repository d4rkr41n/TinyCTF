<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head.ejs') %>
</head>
<body class="body-box-menu">
    <div class="wrapper slide-bottom box-menu">
        <h2>TinyCTF Submissions</h2>
        <p>Enter a flag! Any flag!</p>
        <form action="" method="post">

          <% if(error != ''){ %>
            <span class='form-error'>&nbsp; <%= error %>&nbsp;</span>
          <% } %>

          <% if(good != ''){ %>
            <span class='form-good'>&nbsp; <%= good %>&nbsp;</span>
          <% } %>

            <div class="form-group">
                <label>Guess</label>
                <input type="text" name="guess" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="guess">
            </div>
        </form>
    </div>
</body>
</html>
